<h1>Listing livros</h1>

<table>
  <tr>
    <th>Titulo</th>
    <th>Subtitulo</th>
    <th>Autor</th>
    <th>Quantidade</th>
    <th>Prazo entrega</th>
    <th>Isbn</th>
    <th>Data lancamento</th>
    <th>Edicao</th>
    <th>Editora</th>
    <th>Categorialivro</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @livros.each do |livro| %>
  <tr>
    <td><%= livro.titulo %></td>
    <td><%= livro.subtitulo %></td>
    <td><%= livro.autor %></td>
    <td><%= livro.quantidade %></td>
    <td><%= livro.prazo_entrega %></td>
    <td><%= livro.isbn %></td>
    <td><%= livro.data_lancamento %></td>
    <td><%= livro.edicao %></td>
    <td><%= livro.editora %></td>
    <td><%= livro.categorialivro %></td>
    <td><%= link_to 'Show', livro %></td>
    <td><%= link_to 'Edit', edit_livro_path(livro) %></td>
    <td><%= link_to 'Destroy', livro, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

