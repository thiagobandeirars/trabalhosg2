<h1>Lista de Livros
<%= link_to 'Novo livro', new_livro_path %></h1>

<table>
  <tr>
    <th>Título</th>
    <th>Subtítulo</th>
    <th>Autor</th>
    <th>Quantidade</th>
    <th>Prazo entrega</th>
    <th>ISBN</th>
    <th>Data lançamento</th>
    <th>Edição</th>
    <th>Editora</th>
    <th>Categoria</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @livros.each do |livro| %>
  <tr>
    <td><%= livro.titulo %></td>
    <td><%= livro.subtitulo %></td>
    <td><%= livro.autor %></td>
    <td><%= livro.quantidade %></td>
    <td><%= livro.prazo_entrega %></td>
    <td><%= livro.isbn %></td>
    <td><%= livro.data_lancamento %></td>
    <td><%= livro.edicao %></td>
    <td><%= livro.editora.razao_social %></td>
    <td><%= livro.categorialivro.descricao %></td>
    <td class="botoes"><%= link_to image_tag("show.png"), livro %></td>
    <td class="botoes"><%= link_to image_tag("edit.png"), edit_livro_path(livro) %></td>
    <td class="botoes"><%= link_to image_tag("delete.png"), livro, :confirm => 'Are you sure?', :method => :delete %></td>  </tr>
<% end %>
</table>
